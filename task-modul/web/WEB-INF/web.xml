<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>AdminsPage</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>SiteName</param-name>
        <param-value>ONLINE EDUCATION SYSTEM</param-value>
    </context-param>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/DB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/tuter</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>ContainerTuter</res-auth>
    </resource-ref>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/student</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>ContainerStudent</res-auth>
    </resource-ref>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/Error.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>DataBaseManager</servlet-name>
        <servlet-class>controll.DataBaseManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTask</servlet-name>
        <servlet-class>controll.CreateTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TaskGroup</servlet-name>
        <servlet-class>controllEdit.Group</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Group</servlet-name>
        <servlet-class>controll.RenderAdminGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Task</servlet-name>
        <servlet-class>controll.RenderAdminTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditTask</servlet-name>
        <servlet-class>controll.EditTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateGroup</servlet-name>
        <servlet-class>controll.CreateGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditGroup</servlet-name>
        <servlet-class>controll.EditGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateWork</servlet-name>
        <servlet-class>controll.CreateWork</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckTask</servlet-name>
        <servlet-class>controll.CheckTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NextTask</servlet-name>
        <servlet-class>controll.NextTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>auth</servlet-name>
        <servlet-class>auth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FinishWork</servlet-name>
        <servlet-class>controll.FinishWork</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Timer</servlet-name>
        <servlet-class>controll.Timer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Auth</servlet-name>
        <servlet-class>controll.Auth</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Main</servlet-name>
        <servlet-class>controll.Main</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>controll.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataBaseManager</servlet-name>
        <url-pattern>/admin/DataBaseManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTask</servlet-name>
        <url-pattern>/edit/CreateTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaskGroup</servlet-name>
        <url-pattern>/edit/TaskGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Group</servlet-name>
        <url-pattern>/owner/Group</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Task</servlet-name>
        <url-pattern>/owner/Task</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditTask</servlet-name>
        <url-pattern>/edit/EditTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateGroup</servlet-name>
        <url-pattern>/edit/CreateGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditGroup</servlet-name>
        <url-pattern>/edit/EditGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateWork</servlet-name>
        <url-pattern>/pass/Start</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckTask</servlet-name>
        <url-pattern>/pass/Check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NextTask</servlet-name>
        <url-pattern>/pass/NextTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>auth</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FinishWork</servlet-name>
        <url-pattern>/pass/FinishWork</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Timer</servlet-name>
        <url-pattern>/pass/Timer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Auth</servlet-name>
        <url-pattern>/Auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Main</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/MyServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
