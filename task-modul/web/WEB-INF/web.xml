<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>SiteName</param-name>
        <param-value>ONLINE EDUCATION SYSTEM</param-value>
    </context-param>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/DB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/tuter</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>ContainerTuter</res-auth>
    </resource-ref>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/student</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>ContainerStudent</res-auth>
    </resource-ref>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/Error.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>DataBaseManager</servlet-name>
        <servlet-class>controll.DataBaseManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTask</servlet-name>
        <servlet-class>controll.CreateTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TaskGroup</servlet-name>
        <servlet-class>controllEdit.Group</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Group</servlet-name>
        <servlet-class>controll.RenderAdminGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Task</servlet-name>
        <servlet-class>controll.RenderAdminTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditTask</servlet-name>
        <servlet-class>controll.EditTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateGroup</servlet-name>
        <servlet-class>controll.CreateGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditGroup</servlet-name>
        <servlet-class>controll.EditGroup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateWork</servlet-name>
        <servlet-class>controll.CreateWork</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DoTask</servlet-name>
        <servlet-class>controll.CheckTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NextTask</servlet-name>
        <servlet-class>controll.NextTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataBaseManager</servlet-name>
        <url-pattern>/edit/DataBaseManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTask</servlet-name>
        <url-pattern>/edit/CreateTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaskGroup</servlet-name>
        <url-pattern>/edit/TaskGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Group</servlet-name>
        <url-pattern>/owner/Group</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Task</servlet-name>
        <url-pattern>/owner/Task</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditTask</servlet-name>
        <url-pattern>/edit/EditTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateGroup</servlet-name>
        <url-pattern>/edit/CreateGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditGroup</servlet-name>
        <url-pattern>/edit/EditGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateWork</servlet-name>
        <url-pattern>/pass/Start</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DoTask</servlet-name>
        <url-pattern>/pass/DoTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NextTask</servlet-name>
        <url-pattern>/pass/NextTask</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
