<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>SiteName</param-name>
        <param-value>ONLINE EDUCATION SYSTEM</param-value>
    </context-param>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/DB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/tuter</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>ContainerTuter</res-auth>
    </resource-ref>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/student</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>ContainerStudent</res-auth>
    </resource-ref>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>ServletListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>DataBaseManager</servlet-name>
        <servlet-class>controllEdit.DataBaseManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateTask</servlet-name>
        <servlet-class>controllEdit.CreateTask</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TaskGroup</servlet-name>
        <servlet-class>controllEdit.Group</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Group</servlet-name>
        <servlet-class>controllOwner.Group</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Task</servlet-name>
        <servlet-class>controllOwner.Task</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditTask</servlet-name>
        <servlet-class>controllEdit.EditTask</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DataBaseManager</servlet-name>
        <url-pattern>/edit/DataBaseManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateTask</servlet-name>
        <url-pattern>/edit/CreateTask</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TaskGroup</servlet-name>
        <url-pattern>/edit/TaskGroup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Group</servlet-name>
        <url-pattern>/owner/Group</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Task</servlet-name>
        <url-pattern>/owner/Task</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditTask</servlet-name>
        <url-pattern>/edit/EditTask</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
